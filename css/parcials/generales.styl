html
  font-family 'Lato', sans-serif !important
  font-size 14px
  color #808080
  font-weight normal
  overflow-x hidden !important
  line-height 25px
  text-align center

@-webkit-viewport 
  width device-width
@-moz-viewport 
  width device-width
@-ms-viewport 
  width device-width
@-o-viewport 
  width device-width
@viewport 
  width device-width
*,*:before,*:after
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
i
 vertical-align middle
ul, ol
  padding-left 0 !important

li
  list-style none

::-moz-selection
  background #FC6D6D
  color #FFF
  background #FC6D6D
  color #FFF

::selection
  background #FC6D6D
  color #FFF

a
  color #009CDC
  -webkit-transition all 700ms
  transition all 700ms
  &:hover
    color #3165AE
    text-decoration none

p
  margin 0

.full-width
  width 100%
  margin auto